package{	import flash.display.Sprite;    import flash.ui.ContextMenu;    import flash.ui.ContextMenuItem;    import flash.events.ContextMenuEvent;    import flash.net.navigateToURL;    import flash.net.URLRequest;		public class ContextMenuExample extends Sprite	{		private var menuItemLabel:String = "Mark McDonnell";		private var menuItemLabel2:String = "Another Label";        private var url:String = "http://www.domain.com/";        private var cm:ContextMenu;        public function ContextMenuExample()		{			cm = new ContextMenu();            cm.hideBuiltInItems();			            var cmi:ContextMenuItem = new ContextMenuItem(menuItemLabel);            cmi.addEventListener(ContextMenuEvent.MENU_ITEM_SELECT, menuItemSelected);            			cm.customItems.push(cmi);						var cm2:ContextMenuItem = new ContextMenuItem(menuItemLabel2);            cm2.addEventListener(ContextMenuEvent.MENU_ITEM_SELECT, menuItemSelected);            			cm.customItems.push(cm2);			            this.contextMenu = cm;		}		        private function menuItemSelected(e:ContextMenuEvent):void        {            if(e.target.caption == "Another Label")			{				// do nothin with this			}			else // otherwise open the url that we know is there on the first label			{				var req:URLRequest = new URLRequest(url);            	navigateToURL(req, '_blank');			}        }	}}