package{	import flash.display.MovieClip;	import flash.text.TextField;	import biz.flashscript.Root;	public class Example extends MovieClip	{		private var _root:MovieClip;		private var tl:TextField;		public function Example()		{			_root = Root._root;		}		public function stageTest ():void		{			tl = new TextField();			_root.addChild(tl);			tl.autoSize = "left";            tl.background = true;            tl.border = true;			tl.backgroundColor = 0xFFFFFF;			tl.text = "This is the execution of the Example class.";		}	}}